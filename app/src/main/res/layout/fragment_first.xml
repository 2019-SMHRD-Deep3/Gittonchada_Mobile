<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    <ScrollView-->
    <!--        android:id="@+id/horScrollView"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="76dp"
            android:background="@color/design_default_color_background"
            android:text="SOLGIT"
            android:textAlignment="center"
            android:textColor="#FF8B71"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_solgit"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/firstdesign"
            android:text="Solgit 바로가기"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/btn_energy"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/sedesign"
            android:text="한국전력거래소"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/btn_solgit"
            app:layout_constraintTop_toBottomOf="@+id/btn_solgit" />

        <Button
            android:id="@+id/btn_smp"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/thdesign"
            android:text="SMP 현황"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="@+id/btn_energy"
            app:layout_constraintTop_toBottomOf="@+id/btn_energy" />

        <Button
            android:id="@+id/btn_consulting"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/fodesign"
            android:text="상담문의"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="@+id/btn_smp"
            app:layout_constraintTop_toBottomOf="@+id/btn_smp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 웹뷰 -->

    <!--    </ScrollView>-->
</LinearLayout>





